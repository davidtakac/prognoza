<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@android:id/background"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/app_widget_background"
    android:orientation="vertical"
    android:gravity="center_vertical"
    android:padding="16dp"
    android:theme="@style/Theme.Prognoza.Widget"
    tools:layout_height="180dp"
    tools:layout_width="180dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/iv_weather_icon"
            android:layout_width="56dp"
            android:layout_height="56dp"
            tools:src="@drawable/clearsky_day" />

        <TextView
            android:id="@+id/tv_temperature"
            android:layout_width="wrap_content"
            android:layout_height="56dp"
            android:layout_marginStart="4dp"
            android:maxLines="1"
            android:textColor="?attr/widgetTextPrimaryColor"
            android:textSize="42sp"
            android:gravity="center"
            android:layout_gravity="center_horizontal"
            tools:text="180°" />
    </LinearLayout>

    <TextView
        android:id="@+id/tv_place"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="?attr/widgetTextSecondaryColor"
        android:textSize="16sp"
        tools:text="Osijek"
        android:maxLines="1"
        android:ellipsize="end"/>

    <TextView
        android:id="@+id/tv_feels_like"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="?attr/widgetTextSecondaryColor"
        android:textSize="14sp"
        tools:text="Feels like 225°"
        android:maxLines="1"
        android:ellipsize="end"
        android:layout_marginTop="8dp"/>

    <TextView
        android:id="@+id/tv_precipitation_forecast"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="?attr/widgetTextSecondaryColor"
        android:textSize="14sp"
        tools:text="No precipitation in the next two hours"
        android:ellipsize="end"/>

</LinearLayout>